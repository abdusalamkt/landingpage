{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/gallery/page.js", "app/components/productszoomoncursor", "app/components/TestimonialSlider.jsx", "app/components/TestimonialSlider.js", "app/components/ContactUs.js", "app/components/ContactUs.js", "app/components/ContactUs.js", "app/components/ContactUs.js", "app/components/GetInTouchSection.js", "app/components/Products.js", "app/service-and-maintenance/page.js", "app/service-and-maintenance/page.js"],
  "exclude": ["node_modules"]
}
